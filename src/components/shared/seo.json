{
  "collectionName": "components_shared_seo",
  "info": {
    "displayName": "SEO",
    "icon": "search",
    "description": "SEO meta bilgileri"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "metaKeywords": {
      "type": "text"
    },
    "metaRobots": {
      "type": "string",
      "default": "index, follow",
      "required": true
    },
    "canonicalURL": {
      "type": "string"
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
} 