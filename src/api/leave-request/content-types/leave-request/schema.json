{
  "kind": "collectionType",
  "collectionName": "leave_requests",
  "info": {
    "singularName": "leave-request",
    "pluralName": "leave-requests",
    "displayName": "Leave Request",
    "description": "Ä°zin Talepleri"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "worker": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::worker.worker"
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company-profile.company-profile"
    },
    "leaveType": {
      "type": "enumeration",
      "enum": [
        "annual",
        "sick",
        "maternity",
        "paternity",
        "funeral",
        "wedding",
        "moving",
        "unpaid",
        "other"
      ],
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "totalDays": {
      "type": "integer",
      "required": true
    },
    "reason": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ],
      "default": "pending"
    },
    "reviewedBy": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "reviewedAt": {
      "type": "datetime"
    },
    "reviewNote": {
      "type": "text"
    },
    "document": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files",
        "images"
      ]
    }
  }
}

